<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container mt-4">
      <div class="row row-cols-4">
        <%blogs.forEach(blog=> { %>
          <div class="col">
            <div class="card col" style="width: 18rem;">
              <img src="<%=blog.coverImg %>" class="card-img-top">
              <div class="card-body">
                <h5 class="card-title">
                  <%= blog.title %>
                </h5>
                <a href="/blog/<%= blog._id %>" target="_blank" class="btn btn-primary">Click me to view more..!</a>
              </div>
            </div>
          </div>
          <br>
          <% }); %>
      </div>
    </div>
    <%- include('./partials/script') %>
</body>

</html>