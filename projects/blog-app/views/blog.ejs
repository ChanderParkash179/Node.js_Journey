<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div class="container border p-4">
      <form action="/blog/form" method="POST" enctype="multipart/form-data">
        <div class="row mb-3 text-center">
          <h1>Blog</h1>
        </div>

        <div class="row mb-3">
          <label for="coverImg" class="col-sm-2 col-form-label">Cover Image</label>
          <div class="col-sm-10">
            <input type="file" class="form-control" name="coverImg">
          </div>
        </div>
        <div class="row mb-3">
          <label for="title" class="col-sm-2 col-form-label">Title</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Enter your Blog Title here" id="title" name="title">
          </div>
        </div>
        <div class="row mb-3">
          <label for="body" class="col-sm-2 col-form-label">Body</label>
          <div class="col-sm-10">
            <textarea class="form-control" placeholder="Enter your Blog Content here" id="body" name="body"
              style="height: 100px"></textarea>
          </div>
        </div>
        <div class="row mb-3">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
    </div>
    <%- include('./partials/script') %>
</body>

</html>